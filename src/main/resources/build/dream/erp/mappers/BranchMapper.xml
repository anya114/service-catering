<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="build.dream.erp.mappers.BranchMapper">
    <insert id="insert" parameterType="build.dream.common.erp.domains.Branch" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO branch(code, name, type,
        status, tenant_id, create_user_id,
        last_update_user_id)
        VALUES (#{code}, #{name}, #{type},
        #{status}, #{tenantId}, #{createUserId},
        #{lastUpdateUserId})
    </insert>

    <insert id="insertAll" parameterType="java.util.List" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO branch(code, name, type, status, tenant_id, create_user_id, last_update_user_id)
        VALUES
        <foreach collection="list" index="index" item="branch" separator=",">
            (#{branch.code}, #{branch.name}, #{branch.type}, #{branch.status}, #{branch.tenantId}, #{branch.createUserId}, #{branch.lastUpdateUserId})
        </foreach>
    </insert>

    <update id="update" parameterType="build.dream.common.erp.domains.Branch">
        UPDATE branch
        SET code = #{code},
        name = #{name},
        type = #{type},
        status = #{status},
        tenant_id = #{tenantId},
        create_user_id = #{createUserId},
        last_update_user_id = #{lastUpdateUserId},
        deleted = #{deleted}
        WHERE id = #{id}
    </update>
    
    <insert id="insertMergeUserBranch">
        INSERT INTO merge_user_branch(user_id, tenant_id, branch_id) VALUES (#{userId}, #{tenantId}, #{branchId})
    </insert>

    <select id="findAll" parameterType="build.dream.common.utils.SearchModel" resultType="build.dream.common.erp.domains.Branch">
        SELECT * FROM branch <include refid="searchConditionSql"></include> <include refid="paginationSql"></include>
    </select>

    <select id="countBranches" parameterType="build.dream.common.utils.SearchModel" resultType="java.lang.Long">
        SELECT COUNT(1) FROM branch <include refid="searchConditionSql"></include>
    </select>

    <select id="find" parameterType="build.dream.common.utils.SearchModel" resultType="build.dream.common.erp.domains.Branch">
        SELECT * FROM branch <include refid="searchConditionSql"></include>
    </select>

    <sql id="searchConditionSql">
        WHERE
        <foreach collection="searchConditions" index="index" item="searchCondition" separator=" AND ">
            <choose>
                <when test="@org.apache.commons.lang.StringUtils@equalsIgnoreCase(searchCondition.operationSymbol, 'IN')">
                    ${searchCondition.columnName} ${searchCondition.operationSymbol}
                    <foreach collection="searchCondition.searchParameter" index="index" item="item" open="(" separator="," close=")">
                        #{item}
                    </foreach>
                </when>
                <otherwise>
                    ${searchCondition.columnName} ${searchCondition.operationSymbol} #{searchCondition.searchParameter}
                </otherwise>
            </choose>
        </foreach>
    </sql>

    <sql id="paginationSql">
        LIMIT #{offset}, #{maxResults}
    </sql>

    <select id="findByUserIdAndTenantId" resultType="build.dream.common.erp.domains.Branch">
        SELECT
        branch.*
        FROM branch
        INNER JOIN merge_user_branch ON branch.id = merge_user_branch.branch_id AND branch.tenant_id = merge_user_branch.tenant_id
        WHERE branch.tenant_id = #{tenantId}
        AND merge_user_branch.user_id = #{userId}
        AND branch.deleted = 0
    </select>

    <select id="findAllUserIds" parameterType="build.dream.common.utils.SearchModel" resultType="java.math.BigInteger">
        SELECT user_id FROM merge_user_branch <include refid="searchConditionSql"></include> <include refid="paginationSql"></include>
    </select>

    <select id="countUsers" parameterType="build.dream.common.utils.SearchModel" resultType="java.lang.Long">
        SELECT COUNT(1) FROM merge_user_branch <include refid="searchConditionSql"></include>
    </select>

    <select id="findAllBranchInfos" resultType="build.dream.common.utils.UnderscoreToCamelCaseMap">
        SELECT id, code, name, type, status, tenant_id FROM branch WHERE deleted = 0;
    </select>
</mapper>