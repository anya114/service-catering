<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="build.dream.erp.mappers.ElemeOrderItemMapper">
    <insert id="insert" parameterType="build.dream.common.erp.catering.domains.ElemeOrderItem" useGeneratedKeys="true" keyProperty="id">
        ${@build.dream.common.utils.BeanUtils@generateInsertSql("build.dream.common.erp.catering.domains.ElemeOrderItem")}
    </insert>

    <update id="update" parameterType="build.dream.common.erp.catering.domains.ElemeOrderItem">
        ${@build.dream.common.utils.BeanUtils@generateUpdateSql("build.dream.common.erp.catering.domains.ElemeOrderItem")}
    </update>
    
    <select id="findAll" parameterType="build.dream.common.utils.SearchModel" resultType="build.dream.common.erp.catering.domains.ElemeOrderItem">
        SELECT * FROM eleme_order_item <include refid="searchConditionSql"></include>
    </select>

    <select id="find" parameterType="build.dream.common.utils.SearchModel" resultType="build.dream.common.erp.catering.domains.ElemeOrderItem">
        SELECT * FROM eleme_order_item <include refid="searchConditionSql"></include>
    </select>

    <sql id="searchConditionSql">
        <if test="@org.apache.commons.collections.CollectionUtils@isNotEmpty(searchConditions)">
            WHERE
            <foreach collection="searchConditions" index="index" item="searchCondition" separator=" AND ">
                <choose>
                    <when test="@org.apache.commons.lang.StringUtils@equalsIgnoreCase(searchCondition.operationSymbol, 'IN')">
                        ${searchCondition.columnName} ${searchCondition.operationSymbol}
                        <foreach collection="searchCondition.searchParameter" index="index" item="item" open="(" separator="," close=")">
                            #{item}
                        </foreach>
                    </when>
                    <otherwise>
                        ${searchCondition.columnName} ${searchCondition.operationSymbol} #{searchCondition.searchParameter}
                    </otherwise>
                </choose>
            </foreach>
        </if>
    </sql>
</mapper>