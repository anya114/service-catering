<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="build.dream.erp.mappers.ActivityMapper">
    <resultMap id="activityBuyGive" type="build.dream.common.erp.catering.domains.ActivityBuyGive"></resultMap>
    <resultMap id="activityFullReduction" type="build.dream.common.erp.catering.domains.ActivityFullReduction"></resultMap>

    <select id="findAll" parameterType="build.dream.common.utils.SearchModel" resultType="build.dream.common.erp.catering.domains.Activity">
        SELECT * FROM activity <include refid="build.dream.erp.mappers.CommonMapper.searchConditionSql"></include>
    </select>

    <select id="find" parameterType="build.dream.common.utils.SearchModel" resultType="build.dream.common.erp.catering.domains.Activity">
        SELECT * FROM activity <include refid="build.dream.erp.mappers.CommonMapper.searchConditionSql"></include>
    </select>

    <select id="findAllActivities" statementType="CALLABLE" resultMap="activityBuyGive, activityFullReduction">
        {call proc_find_all_activities()}
    </select>
</mapper>