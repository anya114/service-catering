<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="build.dream.catering.mappers.GoodsFlavorMapper">
    <insert id="insert" parameterType="build.dream.common.erp.catering.domains.GoodsFlavor" useGeneratedKeys="true" keyProperty="id">
        ${@build.dream.common.utils.BeanUtils@generateInsertSql("build.dream.common.erp.catering.domains.GoodsFlavor")}
    </insert>

    <insert id="insertAll" parameterType="java.util.List" useGeneratedKeys="true" keyProperty="id">
        <bind name="sql" value="@build.dream.common.utils.BeanUtils@generateInsertAllSql('build.dream.common.erp.catering.domains.GoodsFlavor')"></bind>
        ${sql[0]}
        <foreach collection="list" index="index" item="item" separator=",">
            ${sql[1]}
        </foreach>
    </insert>

    <update id="update" parameterType="build.dream.common.erp.catering.domains.GoodsFlavor">
        ${@build.dream.common.utils.BeanUtils@generateUpdateSql("build.dream.common.erp.catering.domains.GoodsFlavor")}
    </update>

    <select id="find" parameterType="build.dream.common.utils.SearchModel"  resultType="build.dream.common.erp.catering.domains.GoodsFlavor">
        SELECT * FROM goods_flavor <include refid="build.dream.catering.mappers.CommonMapper.searchConditionSql"></include>
    </select>

    <select id="findAll" parameterType="build.dream.common.utils.SearchModel" resultType="build.dream.common.erp.catering.domains.GoodsFlavor">
        SELECT * FROM goods_flavor <include refid="build.dream.catering.mappers.CommonMapper.searchConditionSql"></include>
    </select>

    <select id="findAllPaged" parameterType="build.dream.common.utils.SearchModel" resultType="build.dream.common.erp.catering.domains.GoodsFlavor">
        SELECT * FROM goods_flavor <include refid="build.dream.catering.mappers.CommonMapper.searchConditionSql"></include> <include refid="build.dream.catering.mappers.CommonMapper.paginationSql"></include>
    </select>

    <update id="deleteAllByGoodsId">
        UPDATE goods_flavor SET last_update_user_id = #{userId}, last_update_remark = #{lastUpdateRemark}, deleted = 1
        WHERE goods_flavor_group_id IN (SELECT id FROM goods_flavor_group WHERE goods_id = #{goodsId})
    </update>
</mapper>