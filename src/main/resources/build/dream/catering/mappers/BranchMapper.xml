<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="build.dream.catering.mappers.BranchMapper">
    <insert id="insertMergeUserBranch">
        INSERT INTO merge_user_branch(user_id, tenant_id, branch_id) VALUES (#{userId}, #{tenantId}, #{branchId})
    </insert>

    <select id="countUsers" resultType="java.lang.Long">
        SELECT COUNT(1) FROM merge_user_branch <include refid="build.dream.catering.mappers.CommonMapper.searchConditionSql"></include>
    </select>

    <select id="findAllUserIds" resultType="java.math.BigInteger">
        SELECT user_id FROM merge_user_branch <include refid="build.dream.catering.mappers.CommonMapper.searchConditionSql"></include> <include refid="build.dream.catering.mappers.CommonMapper.paginationSql"></include>
    </select>

    <select id="findByTenantIdAndUserId" resultType="build.dream.common.catering.domains.Branch">
        SELECT * FROM branch WHERE id = (SELECT branch_id FROM merge_user_branch WHERE tenant_id = #{tenantId} AND user_id = #{userId} AND deleted = 0) AND tenant_id = #{tenantId} AND deleted = 0;
    </select>
</mapper>